{% trans_default_domain 'materials.stock' %}

<div class="modal-dialog modal-dialog-centered " style="max-width: 800px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'Разделить заявку для доставки'|trans }}
            </h5>
        </div>

        <div class="modal-body">
            <h5>
                {# Вы уверены, что желаете удалить #}
                Вы уверены, что заказ # {{ name }} необходимо разделить?
            </h5>

            <strong class="text-danger">Рекомендуется уведомить клиента о том, что доставка и оплата будет из несколькоих частей!</strong>
        </div>

        <div class="modal-footer ">


            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>


                {# Сохранить #}
                {{ form_widget(form.divide, { label: '
                    <span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>


    </div>

    {{ form_end(form) }}
</div>
