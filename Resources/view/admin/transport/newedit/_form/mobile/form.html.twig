{% trans_default_domain 'delivery-transport.transport' %}


<div class="d-flex flex-column gap-2 mb-3">

    <div class="d-flex flex-column gap-2">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {#  Параметры транспорта  #}
                        Параметры транспорта
                    </h4>
                </div>

                <div class="card-body text-start pb-0">

                    {# Настройки локали  #}
                    {{ include(_self|replace({ "form.html.twig": "_trans.html.twig" })) }}

                    {{ include(_self|replace({ "form.html.twig": "_main.html.twig" })) }}

                </div>
            </div>

        </div>

        <div class="card w-100 border-light">
            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {#  Параметры транспорта  #}
                        Водители
                    </h4>
                </div>
                <div class="card-body text-start pb-0" id='{{ form.vars.id }}-collection'>
                    {{ include(_self|replace({ "form.html.twig": "driver/_driver.html.twig" })) }}
                </div>
            </div>

            <div class="card-footer border-light bg-body d-flex justify-content-between align-items-center">

                {# Добавить множественный вариант  #}
                <button type="button"
                        id="delivery_transport_form_add_driver"
                        class="btn btn-sm btn-outline-primary border-0"
                        data-prototype="{{ include(_self|replace({ "form.html.twig": "driver/_driver.prototype.html.twig" }) )|e('html_attr') }}"
                        data-collection="{{ form.vars.id }}-collection"
                        data-index="{{ form.driver.count }}"
                        {# data-call="{{ form.vars.name }}" #}
                >
						<span class="svg-icon svg-icon-2">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none">
								<rect opacity="0.5" x="11" y="18" width="12" height="2" rx="1"
                                      transform="rotate(-90 11 18)" fill="currentColor"></rect>
								<rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
							</svg>
						</span>
                    Добавить еще водителя
                </button>

            </div>
        </div>

    </div>


    <div class="d-flex flex-column gap-2">

        <div class="card w-100 border-light">
            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {#  Параметры транспорта  #}
                        Параметры транспортировочной площади
                    </h4>
                </div>

                <div class="card-body text-start pb-0">
                    {#  Параметры транспорта #}
                    {{ include(_self|replace({ "form.html.twig": "_parameter.html.twig" })) }}

                </div>
            </div>
        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Регион обслуживания  #}
                        Регион обслуживания
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Регион обслуживания #}
                {{ include(_self|replace({ "form.html.twig": "_region.html.twig" })) }}
            </div>
        </div>


    </div>
</div>






