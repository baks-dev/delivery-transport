{% trans_default_domain 'admin.delivery.auto' %}

<div class="d-flex justify-content-between gap-3">

	{# Регистрационный номер #}
	{{ form_row(form.number, { label: 'admin.form.label.number'|trans }) }}

	{# Грузоподъемность, кг. #}
	{{ form_row(form.parameter.carrying, { label: 'admin.form.label.carrying'|trans} ) }}

</div>

<div class="d-flex justify-content-around pb-3 radio-buttons " data-buttons="true">
	<label class="btn p-3 border-dashed rounded-3 w-100 {{ form.active.vars.data ? 'active' }}">
		<div class="d-flex align-items-center">
			<div class="flex-grow-1">
                <span class="h5">
                    <div class="form-check d-flex align-items-center">
                        {{ form_widget(form.active, { label: false }) }}
                        <span>
                            {{ 'admin.form.label.active'|trans }}
                        </span>
                    </div>
                </span>
			</div>
		</div>
	</label>
</div>